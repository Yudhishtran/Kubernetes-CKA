#Adding a volume to already pod by taking a get-output and modifying the pod manifest to add new volume and mount hostpath as well
apiVersion: v1
kind: Pod
metadata:
  creationTimestamp: "2025-09-30T10:20:24Z"
  generation: 1
  name: webapp
  namespace: default
  resourceVersion: "867"
  uid: 444cd583-be4b-4f3b-809f-af0458aa7695
